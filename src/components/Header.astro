    <span>Luis</span><StrokeText color={'white'}>Farf√°n</StrokeText>
  </div>
  <div class="header-menu">
    <ul>
      <li class={activeSection === menuIds.option1 ? 'active' : ''}>
        {menu.option1}
      </li>
      <li class={activeSection === menuIds.option2 ? 'active' : ''}>
        {menu.option2}
      </li>
      <li class={activeSection === menuIds.option3 ? 'active' : ''}>
        {menu.option3}
      </li>
      <li class={activeSection === menuIds.option4 ? 'active' : ''}>
        {menu.option4}
      </li>
