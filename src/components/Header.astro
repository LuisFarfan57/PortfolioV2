<style>
  .header {
    background-color: var(--dark-blue-color);
    box-shadow: 0px 3px 6px #00000059;
    position: sticky;
    top: 0px;
    left: 0;
    right: 0;
    display: flex;
    padding: 1rem 2rem;
    justify-content: space-between;
    align-items: center;
    height: 6rem;
    z-index: 10000;
  }

  .header-menu {
    ul {
      display: flex;
      list-style: none;
      padding: 0;
      margin: 0;

      li {
        cursor: pointer;
        transition: all 0.2s ease-in;
        border-bottom: 1px solid var(--dark-blue-color);
      }

      li:not(:last-child) {
        margin-right: 1.5rem;
      }

      li.active {
        color: var(--blue-color);
        border-bottom: 1px solid var(--blue-color);
      }

      li:hover {
        color: var(--blue-color);
        border-bottom: 1px solid var(--blue-color);
      }
    }
  }

  .lang-cv-container {
    display: flex;
    align-items: center;
  }

  .sm-menu-button {
    display: none;
  }

  .sm-header-menu {
    display: none;
  }

  @media screen and (max-width: 1024px) {
    .full-container {
      -webkit-background-size: 200%;
      -moz-background-size: 200%;
      -o-background-size: 200%;
      background-size: 200%;
    }
  }

  @media only screen and (max-width: 1279px) {
    .header-menu {
      display: none;
    }

    .lang-cv-container {
      display: none;
    }

    .sm-menu-button {
      cursor: pointer;
      display: flex;
      flex-direction: column;
      width: 3rem;
      height: 2rem;
      border: 0;
      background: transparent;

      .sm-menu-button-line {
        height: 2px;
        width: 100%;
        border-radius: 5px;
        background-color: white;
        transition: all 0.3s ease;
        transform-origin: left;
      }

      .sm-menu-button-line:not(:last-child) {
        margin-bottom: 0.98rem;
      }
    }

    .sm-menu-button.open {
      .sm-menu-button-line:first-child {
        transform: rotate(45deg);
      }

      .sm-menu-button-line:nth-child(2) {
        opacity: 0;
      }

      .sm-menu-button-line:last-child {
        transform: rotate(-45deg);
      }
    }

    .sm-header-menu {
      overflow-y: auto;
      max-height: 80vh;
      display: block;
      position: absolute;
      top: 100%;
      background-color: var(--dark-blue-color);
      transition: opacity 0.3s;
      padding: 2rem;
      box-shadow: 0px 3px 6px #00000059;

      li {
        cursor: pointer;
        transition: all 0.2s ease-in;
        border-bottom: 2px solid var(--dark-blue-color);
      }

      li:not(:last-child) {
        margin-bottom: 1rem;
      }

      li:hover,
      li.active {
        transform: scale(1.02);
        color: var(--blue-color);
        border-bottom: 2px solid var(--blue-color);
      }
    }

    .sm-header-menu:not(.open) {
      left: -100%;
      opacity: 0;
    }

    .sm-header-menu.open {
      opacity: 1;
      left: 0;
      right: 0;
    }
  }
</style>
