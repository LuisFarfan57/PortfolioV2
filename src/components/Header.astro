---
import StrokeText from '@components/StrokeText/index.astro';
const activeSection = 'option1';
const menuIds = {
  option1: 'option1',
  option2: 'option2',
  option3: 'option3',
  option4: 'option4',
  option5: 'option5',
};

const menu = {
  option1: 'About',
  option2: 'Projects',
  option3: 'Contact',
  option4: 'Skills',
  option5: 'Languages',
