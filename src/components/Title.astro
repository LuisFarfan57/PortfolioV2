---
interface Props {
  level: 'h1' | 'h2' | 'h3' | 'h4';
  class?: string;
}

const { level, class: className } = Astro.props;
---

{
  level === 'h1' ? (
    <h1
      class:list={[
        'xl:text-[5rem] lg:text-[4.75rem] md:text-[4.5rem] text-[4rem]',
        className,
      ]}
    >
      <slot />
    </h1>
  ) : level === 'h2' ? (
    <h2
      class:list={[
        'xl:text-[4rem] lg:text-[3.75rem] md:text-[3.5rem] text-[3rem]',
        className,
      ]}
    >
      <slot />
    </h2>
  ) : level === 'h3' ? (
    <h3
      class:list={[
        'xl:text-[3rem] lg:text-[2.75rem] md:text-[2.5rem] text-[2rem]',
        className,
      ]}
    >
      <slot />
    </h3>
  ) : level === 'h4' ? (
    <h4
      class:list={[
        'xl:text-[2rem] lg:text-[1.75rem] md:text-[1.5rem] text-[1rem]',
        className,
      ]}
    >
      <slot />
    </h4>
  ) : (
    <p>
      <slot />
    </p>
  )
}
